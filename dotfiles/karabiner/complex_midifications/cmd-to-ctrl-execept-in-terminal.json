{
    "title": "Ilya Kisil",
    "rules": [
        {
            "description": "Cmd <-> Ctrl except in Terminal",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_command"
                    },
                    "to": [
                        {
                            "key_code": "left_control"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "com.apple.Terminal",
                                "^com\\.googlecode\\.iterm2$",
                                "com\\.microsoft\\.rdc\\.mac",
                                "com.jetbrains.pycharm"
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_control"
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "com.apple.Terminal",
                                "^com\\.googlecode\\.iterm2$",
                                "com\\.microsoft\\.rdc\\.mac",
                                "com.jetbrains.pycharm"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
